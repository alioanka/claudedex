# DexScreener Trading Bot Environment Variables
# Copy this file to .env and fill in your actual values

# Add these 2 lines anywhere:
WALLET_ADDRESS=your_wallet_address
DB_URL=postgresql://bot_user:bot_password@localhost:5432/tradingbot

# Solana Wallet (Use Phantom/Solflare private key)
# Format: Base58 string (88 chars), byte array [1,2,3...], or hex
SOLANA_PRIVATE_KEY=your_solana_private_key
SOLANA_WALLET=your_solana_wallet_address
# IMPORTANT: Private Key Security
# Use a dedicated wallet for the bot, not your main wallet
# Consider using a hardware wallet or key management service in production

ENCRYPTION_KEY=your_encryption_key
PRIVATE_KEY=your_encrypted_private_key


# ============================================
# PORTFOLIO CONFIGURATION (for $400 balance)
# ============================================
INITIAL_BALANCE=400.0
INITIAL_BALANCE_PER_CHAIN=100.0

# Position Sizing ($10 per trade)
MAX_POSITION_SIZE_USD=10.0
MIN_POSITION_SIZE_USD=5.0
MAX_POSITION_SIZE_PCT=0.10

# Risk Management
MAX_RISK_PER_TRADE=0.10
MAX_PORTFOLIO_RISK=0.25
DAILY_LOSS_LIMIT_USD=40.0
DAILY_LOSS_LIMIT_PCT=0.10

# Position Limits
MAX_POSITIONS=40
MAX_POSITIONS_PER_CHAIN=10
MAX_CONCURRENT_POSITIONS=4

# Stop Loss / Take Profit (keep your existing values)
STOP_LOSS_PCT=0.07
TAKE_PROFIT_PCT=0.15

# Cooldown (keep existing)
POSITION_COOLDOWN_MINUTES=30

# Circuit Breaker Thresholds
BREAKER_ERROR_RATE_MAX=20
BREAKER_SLIPPAGE_REALIZED_BPS_MAX=120
BREAKER_MAX_CONSECUTIVE_LOSSES=5
BREAKER_MAX_DRAWDOWN_PCT=15
BREAKER_MAX_DAILY_LOSS_PCT=10

# Slippage Configuration
TRADING_MAX_SLIPPAGE_BPS=50
TRADING_EXPECTED_SLIPPAGE_BPS=10
TRADING_MAX_PRICE_IMPACT_BPS=100
TRADING_DEX_FEE_BPS=30

# Mode Configuration
MODE=production  # development, testing, production
DRY_RUN=true    # Set to true for paper trading

# Multi-Chain Support (ADD THIS)
ENABLED_CHAINS=ethereum,bsc,base,arbitrum,solana
DEFAULT_CHAIN=ethereum
MAX_PAIRS_PER_CHAIN=50
DISCOVERY_INTERVAL_SECONDS=300

# Position Management - Exit Conditions
DEFAULT_STOP_LOSS_PERCENT=7       # Exit at -10% loss
DEFAULT_TAKE_PROFIT_PERCENT=15     # Exit at +30% profit
MAX_HOLD_TIME_MINUTES=60           # Exit after 60 minutes
TRAILING_STOP_ENABLED=true         # Enable trailing stops
TRAILING_STOP_PERCENT=5            # Trail by 5%
TRAILING_STOP_ACTIVATION=10     # Activate after +10% profit
TRAILING_STOP_DISTANCE=5        # Trail by 5%

# Volatility Settings (for pump trading)
MAX_VOLATILITY_PERCENT=200      # Allow high volatility
MIN_VOLATILITY_PERCENT=10       # Require some movement
VOLATILITY_WINDOW_MINUTES=60    # Check 1h volatility

# Position Monitoring
POSITION_UPDATE_INTERVAL_SECONDS=10    # Check positions every 10 seconds
ENABLE_POSITION_MONITORING=true        # Must be true!

# Position Management Settings
USE_ML_EXITS=false

# Exit Strategy
EXIT_CHECK_INTERVAL_SECONDS=10


# Chain-specific settings
ETHEREUM_ENABLED=true
BSC_ENABLED=true
BASE_ENABLED=true
ARBITRUM_ENABLED=true
POLYGON_ENABLED=false
SOLANA_ENABLED=true

# --- Ethereum ---
ETHEREUM_RPC_URLS="https://your_eth_rpc_url_1,https://your_eth_rpc_url_2"

# --- Binance Smart Chain ---
BSC_RPC_URLS="https://your_bsc_rpc_url_1,https://your_bsc_rpc_url_2"

# --- Polygon ---
POLYGON_RPC_URLS="https://your_polygon_rpc_url_1"

# --- Arbitrum ---
ARBITRUM_RPC_URLS="https://your_arbitrum_rpc_url_1,https://your_arbitrum_rpc_url_2"

# --- Base ---
BASE_RPC_URLS="https://your_base_rpc_url_1,https://your_base_rpc_url_2"

# --- Solana ---
SOLANA_RPC_URLS="https://your_solana_rpc_url_1,https://your_solana_rpc_url_2"


# Jupiter Aggregator
JUPITER_URL=https://quote-api.jup.ag/v6
JUPITER_MAX_SLIPPAGE_BPS=500  # 5% = 500 basis points

# Solana Transaction Settings
SOLANA_PRIORITY_FEE=5000         # Micro-lamports for priority
SOLANA_COMPUTE_UNIT_PRICE=1000   # Micro-lamports per compute unit
SOLANA_COMPUTE_UNIT_LIMIT=200000 # Max compute units

# Solana Trading Limits
SOLANA_MIN_LIQUIDITY=2000        # Minimum pool liquidity in USD
SOLANA_MAX_POSITION_SIZE_SOL=5   # Max 5 SOL per position
SOLANA_MIN_TRADE_SIZE_SOL=0.1    # Min 0.1 SOL per trade

# Change ALL of these:
ETHEREUM_MIN_LIQUIDITY=3000    # Was 50000
BSC_MIN_LIQUIDITY=500          # Was 10000
BASE_MIN_LIQUIDITY=2000         # Was 20000
ARBITRUM_MIN_LIQUIDITY=3000    # Was 30000
POLYGON_MIN_LIQUIDITY=500      # Was 10000

# Database Configuration - MUST MATCH docker-compose.yml
# For Docker, use 'postgres'. For local, use 'localhost'.
DATABASE_URL=postgresql://bot_user:bot_password@postgres:5432/tradingbot
DB_PASSWORD=bot_password
# For Docker, use 'redis'. For local, use 'localhost'.
REDIS_URL=redis://redis:6379/0

# Web3 Configuration (Legacy - used as fallback)
WEB3_PROVIDER_URL=https://eth-mainnet.g.alchemy.com/v2/your_alchemy_api_key
WEB3_BACKUP_PROVIDER_1=https://mainnet.infura.io/v3/your_infura_api_key
WEB3_BACKUP_PROVIDER_2=https://rpc.ankr.com/eth/your_ankr_api_key
CHAIN_ID=1  # 1=Ethereum, 56=BSC, 137=Polygon, 42161=Arbitrum, 8453=Base

# API Keys - Data Sources
DEXSCREENER_API_KEY=not_required
GOPLUS_API_KEY=your_goplus_api_key
#TOKENSNIFFER_API_KEY=your_tokensniffer_api_key

# DEX Aggregator APIs (Optional but recommended)
1INCH_API_KEY=your_1inch_api_key
PARASWAP_API_KEY=your_paraswap_api_key

# Social Media APIs (Optional)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Telegram Notifications (Required for alerts)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Other settings...
# (Keep the rest of the settings from the user's .env file)
